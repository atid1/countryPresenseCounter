generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Trip {
  id           String   @id @default(uuid())
  userId       String
  countryCode  String
  dateFrom     DateTime @db.Date
  dateTo       DateTime @db.Date
  notes        String?
  createdAt    DateTime @default(now())

  @@index([userId, dateFrom])
}

model Country {
  code  String @id
  label String
}